" General settings -------------------- {{{
    set vicmd=$EDITOR
    set syscalls
    set trash
    " set trashdir='~/.Trash'
    set vifminfo=dhistory,savedirs,chistory,state,tui,shistory,
                \phistory,fhistory,dirstack,registers,bookmarks,bmarks
    set history=1000
    set nofollowlinks
    set number
    set relativenumber
    set sortnumbers
    set undolevels=1000
    set vimhelp
    set norunexec
    set wildmenu
    set wildstyle=popup
    set suggestoptions=normal,visual,view,otherpane,keys,marks,registers
    set ignorecase
    set smartcase
    set nohlsearch
    set incsearch
    set scrolloff=4
    set tabstop=2
    set slowfs=curlftpfs
    set timefmt='%m/%d/%Y %H:%M'
    set statusline="ðŸ’€ %10A %10u:%g %8s[%8E] %18d   %{&sort} %= %a free"
    set rulerformat="%l/%S%[ +%x%]"
    set grepprg='rg --line-number %i %a %s'
    colorscheme TokyoNight
    source $HOME/.config/vifm/icons
" }}}

